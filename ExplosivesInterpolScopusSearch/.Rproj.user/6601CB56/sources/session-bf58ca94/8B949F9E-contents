Abstracts <- read.csv("InterpolInputs/INTERPOL_Abstracts.csv") %>%
  select(EID,Abstract)
File1 <- read.csv("InterpolInputs/INTERPOL (1).csv")
File2 <- read.csv("InterpolInputs/INTERPOL (2).csv")
File3 <- read.csv("InterpolInputs/INTERPOL (3).csv")

File1 <- right_join(Abstracts,File1, by = "EID")
write.csv(File1, file = "InterpolInputs/INTERPOL (1).csv", row.names = FALSE)

File3 <- read.csv("InterpolInputs/INTERPOL (3).csv")
File3$X <- NULL
write.csv(File1, file = "InterpolInputs/INTERPOL (1).csv", row.names = FALSE)
